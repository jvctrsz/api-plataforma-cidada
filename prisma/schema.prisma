generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  employee
  citizen
}

model User {
  id         Int       @id @default(autoincrement())
  name       String
  cpf        String
  email      String    @unique
  password   String
  role       Role      @default(citizen)
  created_at DateTime  @default(now())
  request    Request[]
}

enum Status {
  created
  current
  finished
}

model Request {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  type        String
  status      Status   @default(created)
  created_at  DateTime @default(now())
  user_id     Int
  user        User     @relation(fields: [user_id], references: [id])
}
